// 隐藏顶部黑线条
.headband {
  display: none;
}

//博客内容透明化
//文章内容的透明度设置
.content-wrap {
  opacity: 1;
}

//侧边框的透明度设置
.sidebar {
  opacity: 1;
  background-color: transparent;
}

//菜单栏的透明度设置
.header-inner {
  background: rgba(255,255,255,1);
}

//搜索框（local-search）的透明度设置
.popup {
  opacity: 1;
}
